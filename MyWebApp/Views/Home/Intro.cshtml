@{
    ViewData["Title"] = "Welcome to the Intro of the web app!";
    ViewData["IntroImage"] = "https://pbs.twimg.com/media/ECkcQHmU8AEHudn.jpg";
    ViewData["Paragraph"] = "This is a paragraph of the Intro page!";
    ViewData["Name"] = "Artem Slonko";
    ViewData["Input_1"] = "Input 1";
    ViewData["Input_2"] = "Input 2";
    ViewData["Output"] = "Output";
    ViewData["Submit"] = "Submit";

}

@section Styles
    {
    <link href="~/css/intro.css" rel="stylesheet" />
    <div>
        <style>
            main {
                background-image: url(@ViewData["IntroImage"]);
                background-size: cover;
            }
        </style>
    </div>
}

<div class="IntroText">
    <h1>
        @ViewData["Title"]
    </h1>
    <p>
        @ViewData["Paragraph"]
    </p>
    <h3>
        @ViewData["Name"]
    </h3>
</div>
